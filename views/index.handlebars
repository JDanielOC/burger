<div class='container'>

  <div class="row">

    <div class="col-md-12 text-center">
      <img src="/assets/img/burg.png" alt="burger" class="img-responsive center-block" />
    </div>



  </div>

  <div class='row'>

    <div class='col-md-12'>
      <h1 class='text-center'>I Eat Your BURGERS!</h1>
    </div>

  </div>
  <br>
  <br>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Patiently Waiting To Be Eaten</h2>
      <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          {{this.name}}

          <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Eat the Burger!</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class='col-md-2'></div>
    <div class='col-md-5'>
      <h2>These Have Been Eaten!</h2>

      <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
          {{this.name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">So full.</button>
          </form>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
  <br>
  <br>
  <div class='row'>
    <div class='col-md-12 text-center'>
    {{!-- <h2 class='text-center'>Add a Burger</h2>d --}}
    <form class="create-update-form" action="burgers/insertOne" method="POST">
      <div class="form-group">
        
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>