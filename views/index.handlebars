<h1>I Eat your BURGERS!</h1>

<h2>Patiently Waiting To Be Eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
        <button type="submit">Eat the Burger!</button>        
        </form>
      </li>>
    {{/unless}}
  {{/each}}
</ul>

<h2>These Have Been Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.name}}

      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
      <input type="hidden" name="devoured" value="false">
      <button type="submit">So full.</button>
      </form>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Name Your Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Hungry?</label><br>
    <input type="zradio" name="devoured" value="1" checked> Aren't you full yet?!<br>
    <input type="radio" name="devoured" value="0"> Eat your food!
  </div>

  <button type="submit">Add Burger</button>
</form>
